<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#eeeeee"
    >
         
    <TextView
        android:id="@+id/tvName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Hello Teacher!"
        android:background="#dddddd"
        android:padding="20dp"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    <ScrollView 
	    android:layout_width="fill_parent"
		android:layout_height="fill_parent"
	    >
	    	<LinearLayout 
	    android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
	    >
     <CheckBox
         android:id="@+id/checkBox1"
         android:paddingTop="10dp"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:gravity="center"
          android:background="#ffffaa"
        android:hapticFeedbackEnabled="true"
        android:layout_margin="10dp"
        android:padding="0dp"
        android:textSize="20dp"
         android:text="Available in chamber?" />
     <Button
        android:id="@+id/buttonMyCourses"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
         android:background="@drawable/buttongreenstatelist"
        android:hapticFeedbackEnabled="true"
        android:layout_margin="10dp"
        android:padding="0dp"
        android:textSize="20dp"
        android:text="My courses" />
          <Button
        android:id="@+id/buttonToday"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
         android:background="@drawable/buttongreenstatelist"
        android:hapticFeedbackEnabled="true"
        android:layout_margin="10dp"
        android:padding="0dp"
        android:textSize="20dp"
        android:text="Today's Schedule" />

    
    <Button
        android:id="@+id/buttonCourseList"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
         android:background="@drawable/buttongreenstatelist"
        android:hapticFeedbackEnabled="true"
        android:layout_margin="10dp"
        android:padding="0dp"
        android:textSize="20dp"
        android:text="Course List" />

    <Button
        android:id="@+id/buttonFacultyList"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
         android:background="@drawable/buttongreenstatelist"
        android:hapticFeedbackEnabled="true"
        android:layout_margin="10dp"
        android:padding="0dp"
        android:textSize="20dp"
        android:text="Faculty list" />



     <Button
        android:id="@+id/buttonStudSearchFac"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
         android:background="@drawable/buttongreenstatelist"
        android:hapticFeedbackEnabled="true"
        android:layout_margin="10dp"
        android:padding="0dp"
        android:textSize="20dp"
        android:text="Student Search" />
     </LinearLayout>
          </ScrollView>
</LinearLayout>
