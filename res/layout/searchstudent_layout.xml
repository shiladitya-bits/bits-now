<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
     android:background="#eeeeee"
    >
    <TextView
        android:id="@+id/textViewSearch"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Search Student "
        android:textColor="#000"
        android:textAppearance="?android:attr/textAppearanceLarge" 
                android:padding="20dp"
        android:textStyle="bold"
        android:background="#dddddd"
        />
    <EditText
        android:id="@+id/search_name_2"
        android:ellipsize="end"
        
        android:maxLines="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Name" 
        android:padding="5dp"
        >

        <requestFocus />
    </EditText>

    <EditText
        android:ellipsize="end"
        android:maxLines="1"
                android:scrollHorizontally="true"
        android:id="@+id/search_id_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:padding="5dp"
        android:hint="BITS ID" />

    <EditText
        android:ellipsize="end"
        android:maxLines="1"
                android:scrollHorizontally="true"
        android:id="@+id/search_hostel_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:padding="5dp"
        android:hint="Hostel" />

    <EditText
        android:ellipsize="end"
        android:maxLines="1"
                android:scrollHorizontally="true"
        android:id="@+id/search_room_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:padding="5dp"
        android:hint="Room" />

     <Button
         android:id="@+id/search_button_2"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_margin="20dp"
         android:padding="0dp"
         android:textSize="20dp"
         android:text="Search" 
         android:background="@drawable/buttonbluestatelist"
         android:hapticFeedbackEnabled="true"
         android:textColor="#fff"/>

</LinearLayout>