<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#eeeeee"
     >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Student Details"
        android:textAppearance="?android:attr/textAppearanceLarge" 
        android:padding="20dp"
        android:textStyle="bold"
        android:background="#dddddd"
        />

    <TextView
        android:id="@+id/textViewStudName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name: Shiladitya Mandal"
        android:textAppearance="?android:attr/textAppearanceMedium" 
        android:padding="5dp"
        />

    <TextView
        android:id="@+id/textViewStudId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID: 2010C6PS632G"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:padding="5dp"
         />
    <TextView
        android:id="@+id/textViewStudSem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Semester: 6"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:padding="5dp"
         />
    <TextView
        android:id="@+id/textViewStudList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current List of Courses"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:paddingTop="10dp"
        android:textStyle="bold"
         />

    <ListView
        android:id="@+id/listView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f2f2f2"
         >
    </ListView>
        
	</LinearLayout>